---
import { content, type Locale } from "../i18n/data";
import Analytics from "@vercel/analytics/astro";
import "../styles/main.css";

const locale = Astro.locals.locale as Locale;
const currentContent = content[locale] || content["zh"];
---

<html lang={currentContent.lang}>
  <head>
    <meta charset="utf-8" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <meta name="viewport" content="width=device-width" />
    <meta name="generator" content={Astro.generator} />
    <title>{currentContent.title}</title>
    <link rel="preconnect" href="https://fonts.googleapis.com" />
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
    <link
      href="https://fonts.googleapis.com/css2?family=Cinzel:wght@400;700&family=Noto+Serif+JP:wght@400;700&family=Noto+Serif+SC:wght@400;700&display=swap"
      rel="stylesheet"
    />
  </head>
  <body>
    <div class="container">
      <h1>{currentContent.title}</h1>
      <div class="subtitle">{currentContent.description}</div>

      <div class="links">
        {
          currentContent.links.map((link) => (
            <a
              href={link.url}
              class="link-item"
              target="_blank"
              rel="noopener noreferrer"
            >
              {link.label}
            </a>
          ))
        }
      </div>
    </div>
    <Analytics />
  </body>
</html>
