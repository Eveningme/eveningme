---
import { content, type Locale } from "../i18n/data";

const locale = Astro.locals.locale as Locale;
const currentContent = content[locale] || content["zh"];
---

<html lang={currentContent.lang}>
  <head>
    <meta charset="utf-8" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <meta name="viewport" content="width=device-width" />
    <meta name="generator" content={Astro.generator} />
    <title>{currentContent.title}</title>
    <link rel="preconnect" href="https://fonts.googleapis.com" />
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
    <link
      href="https://fonts.googleapis.com/css2?family=Cinzel:wght@400;700&family=Noto+Serif+JP:wght@400;700&family=Noto+Serif+SC:wght@400;700&display=swap"
      rel="stylesheet"
    />
    <style>
      :root {
        --c-bg: #fdfbf7; /* Warm paper-like background */
        --c-text: #1a1a1a;
      }
      *,
      *::before,
      *::after {
        box-sizing: border-box;
      }
      body {
        margin: 0;
        padding: 0;
        background-color: var(--c-bg);
        color: var(--c-text);
        height: 100vh;
        display: flex;
        flex-direction: column;
        justify-content: flex-start; /* Align from top, not center */
        align-items: center;
        overflow: hidden;
        padding-top: 40vh; /* Start content at ~40% of viewport height */
      }
      .container {
        position: relative;
        z-index: 10;
        text-align: center;
        padding: 2rem;
      }
      h1 {
        font-family: "Cinzel", "Noto Serif SC", "Noto Serif JP", serif;
        font-size: clamp(3rem, 8vw, 6rem);
        font-weight: 400;
        letter-spacing: 0.15em;
        margin: 0;
        line-height: 1.2;
        text-transform: uppercase;
        animation: fadeUp 1.2s ease-out forwards;
        opacity: 0;
        transform: translateY(20px);
      }
      .subtitle {
        font-family: "Cinzel", serif;
        font-size: clamp(0.8rem, 1.5vw, 1rem);
        letter-spacing: 0.3em;
        margin-top: 1.5rem;
        opacity: 0;
        animation: fadeUp 1.2s ease-out 0.4s forwards;
        transform: translateY(20px);
        color: #666;
      }

      @keyframes fadeUp {
        to {
          opacity: 1;
          transform: translateY(0);
        }
      }

      .links {
        margin: 4rem auto 0;
        display: flex;
        flex-wrap: wrap;
        justify-content: flex-start; /* Align items to the start of the block */
        width: fit-content; /* Shrink container to fit content */
        gap: 1.5rem 3rem; /* Increase gap back */
        max-width: 100%; /* Allow full width to prevent wrapping */
        opacity: 0;
        animation: fadeUp 1.2s ease-out 0.8s forwards;
        transform: translateY(20px);
      }
      .link-item,
      .link-item:visited,
      .link-item:active {
        font-family: "Cinzel", serif;
        font-size: 0.9rem;
        color: #1a1a1a;
        text-decoration: none;
        position: relative;
        letter-spacing: 0.1em;
        transition: opacity 0.3s;
        border-bottom: none; /* Ensure no border underline */
      }
      .link-item::after {
        content: "";
        position: absolute;
        width: 100%;
        height: 1px;
        bottom: -4px;
        left: 0;
        background-color: #1a1a1a;
        transform: scaleX(0);
        transform-origin: bottom right;
        transition: transform 0.3s ease-out;
      }
      .link-item:hover {
        opacity: 0.7;
      }
      .link-item:hover::after {
        transform: scaleX(1);
        transform-origin: bottom left;
      }
    </style>
  </head>
  <body>
    <div class="container">
      <h1>{currentContent.title}</h1>
      <div class="subtitle">{currentContent.description}</div>

      <div class="links">
        {
          currentContent.links.map((link) => (
            <a
              href={link.url}
              class="link-item"
              target="_blank"
              rel="noopener noreferrer"
            >
              {link.label}
            </a>
          ))
        }
      </div>
    </div>
  </body>
</html>
